@require 'settings/palette.styl'
@require 'components/table.styl'

// @stylint off
.fix-c-btn svg
    margin-right 0 !important // hack https://github.com/cozy/cozy-ui/issues/338
// @stylint on


.contact-alphabet-wrapper
    @extend $table-row
    justify-content center
    position sticky
    top 0
    z-index 2
    background paleGrey
    border-top none

    +medium-screen()
        top 3rem

    &:hover
        background paleGrey

.contact-alphabet-slider
    list-style none
    display flex
    overflow auto
    -webkit-overflow-scrolling touch
    -ms-overflow-style -ms-autohiding-scrollbar
    padding 0

.contact-alphabet-letter
    display flex
    flex-shrink 0
    justify-content center
    align-items center
    cursor pointer
    width 2rem
    height 2rem
    border-radius 50%

    &:hover
        background silver

.list-wrapper
    width 100%
    max-width 80rem
    margin 0 auto
    box-shadow 0 4px 4px 0 silver

.topbar
    width 100%
    max-width 80rem
    margin .75rem auto
    display flex
    flex 0 0 auto

    .topbar__left
        flex 1

.actions
    display flex

$reset-list
    list-style none
    padding-left 0
    margin 0

.list-contact
    @extend $table
    @extend $reset-list

.sublist-contact
    @extend $reset-list

    :last-child
        .contact
            border 0

.contact
    @extend $table-row
    color coolGrey
    cursor pointer

    +small-screen()
        height auto

.contact-selection
    position absolute
    left .5rem

    +small-screen()
        position relative

.contact-identity
    @extend $table-cell
    @extend $table-cell--primary
    display inline-flex
    align-items center
    flex-basis 30%
    padding-left 2rem

.contact-avatar
    flex-shrink 0

.contact-name
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    display inline-block

.contact-firstname
    margin-left 1rem

.contact-lastname
    font-weight bold


.contact-myself
    color coolGrey
    padding-left .5rem

.contact-phone
    @extend $table-cell
    flex 0 0 12rem

.contact-cozyurl
    @extend $table-cell
    flex 0 0 12rem

.contact-email
    @extend $table-cell
    flex-basis 30%

+small-screen()
    .contact-identity
    .contact-phone
    .contact-cozyurl
    .contact-email
        flex-basis auto
        padding .3rem 1rem

.divider
    @extend $table-divider
    top 3rem

    +medium-screen()
        top 6rem

.menu__item--danger
    color pomegranate
.contacts-empty-container
    display flex
    flex-direction column
    align-items center
// TODO: Find a better way to set the .empty icon size
.contacts-empty>svg
    height 300px
    width 280px

.contacts-empty-actions-wrapper
    display flex
    flex-direction column
    // TODO: Find a better way to set the .c-empty-text top margin to 24px.
    margin-top 19px // + .c-empty-text default 5px top margin

.contacts-empty-action
    flex 0 0 auto
    margin 0
    margin-bottom 8px

.contacts-empty-button
    width 100%
    margin 0

.contacts-empty-soon
    display flex
    justify-content center


.fil-path-title
    font-size 1.3rem
    height 3rem
    display flex
    align-items center
    padding 0 .25rem
